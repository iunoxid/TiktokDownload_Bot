# Port Express (opsional, default 3000)
PORT=3002

# Admin Chat ID - Only this user can access admin commands
ADMIN_CHAT_ID=GANTI_DENGAN_ID_ADMIN_ANDA

# URL API AI. Pertahankan seperti ini jika Anda menggunakan layanan eksternal.
AI_API_URL=https://api.groq.com/openai/v1/chat/completions

# Ganti dengan API Key Groq Anda
GROQ_API_KEY=YOUR_GRQO_API
GROQ_MODEL_NAME=compound-beta-mini

